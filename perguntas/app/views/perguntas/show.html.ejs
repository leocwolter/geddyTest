<div class="hero-unit">
  <h2 class="id"><%= pergunta.id %></h2>
  <%- linkTo('Edit this pergunta', editPerguntaPath(params.id), {class: 'btn pull-right'}); %>
  <%- linkTo('Back to list', perguntaPath(''), {class: 'btn pull-right'}); %>
</div>

<h2>Pergunta Properties</h2>
<% for(var i in pergunta) { -%>
<% if(i !== 'saved') { -%>
<div class="row list-item">
  <div class="span4">
    <h3><%= i %></h3>
  </div>
  <div class="span8">
    <h3><i class="icon-list-alt"></i><span class="<%= i %>"><%= pergunta[i] %></span></h3>
  </div>
</div>
<% } -%><% } -%>